<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/droid_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/droid_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/droid_image"
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/droid_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/droid_name"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/droid_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/droid_description"
        android:textSize="12sp"/>

</RelativeLayout>